<div class="box">	
	<h1>Doc Log In</h1>

	<%= form_tag sessions_path do %>
	  <div class="field">
	    <%= label_tag :name %><br />
	    <%= text_field_tag :name, params[:name] %>
	  </div>
	  <div class="field">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	  <br>
	  <div class="actions"><%= submit_tag "Log In", class: "btn btn-md btn-primary" %></div>
	<% end %>
</div>